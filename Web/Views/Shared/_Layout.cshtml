<!DOCTYPE html>
<html>
    <head>
        <title>@ViewBag.Title</title>
        @*<link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />*@
        @*<script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>*@
        
        <meta http-equiv="Content-type" content="text/html; charset=utf-8" />
        <title>Free CSS template by ChocoTemplates.com</title>
        <link href="@Url.Content("~/Content/css/style.css")" rel="stylesheet" type="text/css" media="all"/>
        
        @* My Css *@
        <link href="@Url.Content("~/Content/css/style-slider.css")" rel="stylesheet" type="text/css" media="all"/>
        <link href="@Url.Content("~/Content/css/style-table.css")" rel="stylesheet" type="text/css" media="all"/>
        
        @* My jQuery *@
        <script src="@Url.Content("~/Scripts/myScripts.js")" type="text/javascript"></script>

        <meta name="keywwords" content="MICHAEL'S Shop - Great free html template for on-line shop. Use it as a start point for your on line business. The template can be easily implemented in many open source E-commerce platforms" />
        <meta name="description" content="MICHAEL'S Shop - Great free html template for on-line shop. Use it as a start point for your on line business. The template can be easily implemented in many open source E-commerce platforms" />
        
        <!-- JS -->
        @* !!! *@
        @*<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.4.1/jquery.min.js" type="text/javascript"></script>*@
        
        
        
        @*Default*@
        <script src="@Url.Content("~/Scripts/js/jquery-1.4.1.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/js/jquery.jcarousel.pack.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/js/jquery-func.js")" type="text/javascript"></script>
        
        <!-- End JS -->
        
    </head>

    <body>
        
@* Shell *@	
<div class="shell">
	
	@* Header *@	
	<div id="header">
		<h1 id="logo">@Html.ActionLink("MICHAEL'S SHOP", "Index", "Home")</h1>	
	
		@* Navigation *@
	    <div id="navigation">
	        <ul>
	            <li>@Html.ActionLink("Главная", "Index", "Home")</li>
	            <li>@Html.ActionLink("О сайте", "Index", "AboutSite")</li>
                <li>@RenderSection("EditOrBuy")</li>
	            <li>@RenderSection("LoginOrRegister")</li>
	        </ul>
	    </div>
        
		@* End Navigation *@
	</div>
	@* End Header *@
	
    @RenderBody()
    @RenderSection("Context")

    
	

    @* Footer *@
	<div id="footer">
		<p class="left">
			@Html.ActionLink("Главная", "Index", "Home")
			<span>|</span>
			@Html.ActionLink("О сайте", "Index", "AboutSite")
		    <span>|</span>
            @Html.ActionLink("Контакты", "Index", "Contacts")
		</p>
		<p class="right">
			&copy; 2015 MICHAEL'S Shop
		</p>
	</div>
	@* End Footer *@
	
</div>	
@* End Shell *@
        

    </body>
</html>
