@using Web.Models
@model LoginViewModel

@{
    ViewBag.Title = "Добро пожаловать!";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Добро пожаловать в наш магазин!</h2>
<div>
    @using (Html.BeginForm())
    {
        <p>@Html.ValidationSummary(true)</p>
        <p>
            Логин: @Html.TextBoxFor(x=>x.UserName)
            @Html.ValidationMessageFor(x=>x.UserName)
        </p>
        <p>
            Пароль: @Html.EditorFor(x=>x.Password)
            @Html.ValidationMessageFor(x=>x.Password)
        </p>
        <input type="submit" value="Войти"/>
    }
    
    <p>
        Для совершения покупок / продаж Вам необходимо сначала @Html.ActionLink("зарегистрироваться", "Register")
    </p>

</div>
